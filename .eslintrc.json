{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-control-regex": "off",
        "no-console": "off",
        "curly": "error",
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "space-before-function-paren": ["error", "always"],
        "strict": "error",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
